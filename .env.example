# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgres://fastforward:fastforward@localhost:5432/fastforward

# Auth
JWT_SECRET=change-me-to-a-random-secret-in-production
JWT_EXPIRY=7d

# Auth Methods (set to "false" to disable)
AUTH_PASSWORD_ENABLED=true
AUTH_EMAIL_CODE_ENABLED=true
AUTH_PASSWORD_REQUIRE_EMAIL=true

# OAuth Providers (set ENABLED to "true" and provide credentials)
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_ENABLED=false
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_MICROSOFT_ENABLED=false
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=

# App URL (used for OAuth callbacks and password reset links)
APP_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=15

# File Uploads
UPLOAD_MAX_FILE_SIZE_MB=10

# CSRF Protection (set to "false" to disable)
CSRF_ENABLED=true

# Email (for email code auth and password resets)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com
