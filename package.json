{
  "name": "fastforward",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "nodemon --watch server server/index.js",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.js",
    "migrate": "node server/migrate.js",
    "test": "lab server/test/ -m 30000 --leaks=false"
  },
  "dependencies": {
    "@hapi/bell": "^13.0.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/crumb": "^9.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/nes": "^14.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "preact": "^10.25.4",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.3",
    "@hapi/lab": "^25.3.1",
    "@preact/preset-vite": "^2.9.3",
    "@tailwindcss/vite": "^4.0.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["bcrypt", "esbuild"]
  }
}
